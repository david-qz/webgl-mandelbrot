{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "globals": {
    "QUnit": false,
    "supabase": false
  },
  "rules": {
    "quotes": ["error", "double"],
    "eqeqeq": ["error", "always"],
    "no-console": "warn",
    "indent": [
      "error",
      4,
      {
        "ArrayExpression": "off",
        "SwitchCase": 1,
        "ignoreComments": true
      }
    ],
    "new-cap": ["error", { "capIsNew": false }],
    "no-redeclare": [
      "error",
      {
        "builtinGlobals": true
      }
    ],
    "semi": ["error", "always"],
    "space-in-parens": ["error"],
    "space-infix-ops": "error",
    "object-curly-spacing": ["error", "always"],
    "comma-spacing": "error",
    "space-before-function-paren": ["error", "never"],
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "array-bracket-spacing": "error"
  }
}
